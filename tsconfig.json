// tsconfig.json
{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    // 这样就可以对 `this` 上的数据属性进行更严格的推断
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "baseUrl": "./", // 路径解析起点
    "paths": { // 配置路径别名防止ts中使用别报警告
      "@*": ["src/*"]
    },
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    ".d.ts"
  ],
  "exclude": ["node_modules"]
}